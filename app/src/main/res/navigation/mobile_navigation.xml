<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/nav_store">

    <fragment
        android:id="@+id/nav_store"
        android:name="com.example.shopping.view.StoreFragment"
        android:label="@string/menu_store"
        tools:layout="@layout/fragment_store" />

    <fragment
        android:id="@+id/nav_favorites"
        android:name="com.example.shopping.view.FavoritesFragment"
        android:label="@string/menu_favorites"
        tools:layout="@layout/fragment_favorites" />

    <fragment
        android:id="@+id/nav_product_detail"
        android:name="com.example.shopping.view.ProductDetailFragment"
        android:label="@string/menu_store"
        tools:layout="@layout/fragment_product_detail" />

    <fragment
        android:id="@+id/nav_cart"
        android:name="com.example.shopping.view.CartFragment"
        android:label="@string/menu_store"
        tools:layout="@layout/fragment_cart" />
</navigation>